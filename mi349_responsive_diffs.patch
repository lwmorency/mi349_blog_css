+/* === MI 349 – Week: Responsive Enhancements (append-only) === */
+
+/* Utilities to replace old inline styles */
+.no-margin { margin: 0 !important; }            /* replaces style="margin:0" */
+.mt-0 { margin-top: 0 !important; }             /* replaces style="margin-top:0" */
+.mt-2 { margin-top: 8px !important; }           /* replaces style="margin-top:8px" */
+.visually-hidden {                               /* replaces inline display:none honeypot */
+  position: absolute !important;
+  left: -10000px !important;
+  top: auto !important;
+  width: 1px !important;
+  height: 1px !important;
+  overflow: hidden !important;
+}
+
+/* Global safe image/media scaling (already present for img, add video/audio) */
+video, iframe { max-width: 100%; height: auto; }
+
+/* Prevent layout from creating horizontal scroll on tiny screens */
+html, body { max-width: 100%; overflow-x: hidden; }
+
+/* Tables: make horizontally scrollable on small screens */
+.table-wrap { overflow-x: auto; -webkit-overflow-scrolling: touch; }
+.table-wrap table { width: 100%; border-collapse: collapse; }
+.table-wrap th, .table-wrap td { padding: .5rem; }
+
+/* Primary nav basic layout (enhanced for mobile in media queries) */
+.site-header .inner nav ul { display: flex; gap: .5rem; flex-wrap: wrap; }
+.site-header .brand { font-weight: 700; }
+
+/* ====== Breakpoint: Tablet and below ====== */
+@media (max-width: 768px) {
+  .container { padding-inline: 1rem; }                     /* 1 */
+  .site-header .inner { flex-wrap: wrap; gap: .5rem; }     /* 2 */
+  .site-header nav ul { width: 100%; justify-content: flex-start; } /* 3 */
+  .layout { display: block; }                               /* 4 (reinforce single column) */
+  main#main-content, .sidebar { width: 100%; }              /* 5 */
+  .form-row { flex-direction: column; }                     /* 6 – stack form fields */
+  .post-inner { padding: 0; }                               /* 7 */
+  .float-right { float: none; margin: 0 0 1rem 0; max-width: 100%; } /* 8 */
+  h1 { font-size: clamp(1.4rem, 4.5vw, 1.9rem); }           /* 9 */
+  p, li { font-size: clamp(1rem, 2.8vw, 1.06rem); }         /* 10 */
+}
+
+/* ====== Breakpoint: Small phones ====== */
+@media (max-width: 480px) {
+  .site-header .inner { padding: .5rem .75rem; }            /* 11 */
+  .site-header .brand { font-size: 1rem; }                  /* 12 */
+  .site-header nav ul { gap: .25rem; }                      /* 13 */
+  .site-header nav ul li a { padding: .4rem .55rem; }       /* 14 – larger hit targets but compact */
+  .newsletter form > div, .newsletter form .row > div { width: 100%; } /* 15 – full width inputs */
+  button, .button { min-height: 44px; padding: .6rem .9rem; }          /* 16 – finger-friendly */
+  .container { padding-inline: .75rem; }                    /* 17 */
+}


